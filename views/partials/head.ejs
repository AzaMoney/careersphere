<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Meta Descriptions and Keywords for SEO -->
    <meta name="description"
        content="LeyOak Multiple-Purpose Business LTD offers investment opportunities across multiple sectors, including General Merchandise, IT, Oil & Gas, Construction, and Industrial Chemicals. Empowering Nigerians to participate in wealth creation with transparent portfolio management, daily earnings, and user engagement.">
    <meta name="keywords"
        content="LeyOak, general merchandise, boutique services, construction, information technology, agro-allied chemicals, telecom services, oil and gas, business empowerment, Nigeria, investment, job creation, Paystack integration, portfolio management, wealth creation, transparency">

    <!-- Author Information -->
    <meta name="author" content="LeyOak Multiple-Purpose Business LTD">

    <!-- Social Sharing Tags (for better engagement) -->
    <meta property="og:title"
        content="LeyOak Multiple-Purpose Business LTD - Empowering Nigerians through Investment Opportunities">
    <meta property="og:description"
        content="Join LeyOak to access investment opportunities across sectors like IT, Oil & Gas, Construction, and General Merchandise. Our platform provides transparent portfolio management, daily earnings, and user-friendly wallet management.">
    <meta property="og:image" content="/images/home/business-7304257_640.jpg">
    <meta property="og:url" content="https://www.leyoak.com">
    <meta property="og:type" content="website">

    <!-- Twitter Card for Social Sharing -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="LeyOak - Empowering Nigerians with Investment Opportunities">
    <meta name="twitter:description"
        content="Participate in wealth creation with LeyOak's investment platform. Manage your portfolio, earn daily, and experience transparent financial management.">
    <meta name="twitter:image" content="/images/home/business-7304257_640.jpg">

    <!-- Title for SEO -->
    <title>
        <%= title %>
    </title>

    <!-- Include CSS and JavaScript -->
    <script type="text/javascript" src="/js/javascript.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.4.0/jspdf.umd.min.js"></script>
    <script src="https://unpkg.com/pizzip@3.0.6/dist/pizzip.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/docxtemplater/3.17.9/docxtemplater.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/FileSaver.js/2.0.5/FileSaver.min.js"></script>
    <script src="https://checkout.flutterwave.com/v3.js"></script>

    <!-- Stylesheets for Different Screen Sizes -->
    <link rel="stylesheet" media="all and (min-width: 320px)" href="/css/small.css">
    <link rel="stylesheet" media="all and (min-width: 769px)" href="/css/medium.css">
    <link rel="stylesheet" media="all and (min-width: 1200px)" href="/css/large.css">

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/images/favicon/favicon.ico">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&family=Shadows+Into+Light&display=swap"
        rel="stylesheet">
